</head>

<body>
    <header>
        <%- include('header.ejs') %>
    </header>

    <section>
        <div class="container">
            <div class="content">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="">
                        <form class="form-group" action="/update-restaurent" method="POST">
                            <div class="form-group">
                                <label for="restaurent_name">Name</label>
                                <input type="text" class="form-control" id="restaurent_name" name="restaurent_name" value="<%= restaurent.restaurent_name %>">
                            </div>
                            <div class="form-group">
                                <label for="restaurent_name">Address</label>
                                <input type="text" class="form-control" id="restaurent_address" name="restaurent_address" value="<%= restaurent.restaurent_address %>">
                            </div>
                            <div class="form-group">
                                <label for="restaurent_name">Introduction</label>
                                <textarea rows="5" class="form-control" id="restaurent_introduction" name="restaurent_introduction"><%= restaurent.restaurent_introduction %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="restaurent_type">Type of Restaurent</label>
                                <select class="form-control" id="restaurent_type" name="restaurent_type">
                                    <% type.forEach(function(item){%>
                                        <option value="<%=item.id%>">
                                            <%= item.type%>
                                        </option>
                                        <%}); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="restaurent_number_table">Address</label>
                                <input type="text" class="form-control" id="restaurent_number_table" name="restaurent_number_table" value="<%= restaurent.restaurent_number_table %>">
                            </div>
                            <input type="submit" value="Update" class="btn btn-primary pull-right">
                        </form>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </section>

    <footer>
        <div class="footer">
            <%- include('footer.ejs') %>
        </div>
    </footer>

</body>
    <link href="css/update.css" type="text/css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</html>